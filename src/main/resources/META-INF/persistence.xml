<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
    http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="centralworks.spawners"
                      transaction-type="RESOURCE_LOCAL">
        <class>centralworks.spawners.modules.models.UserDetails</class>
        <class>centralworks.spawners.modules.models.spawners.Spawner</class>
        <class>centralworks.spawners.modules.models.dropsstorage.DropStorage</class>
        <class>centralworks.spawners.modules.models.dropsstorage.DropPlayer</class>
        <class>centralworks.spawners.modules.models.dropsstorage.BoosterPlayer</class>
        <class>centralworks.spawners.modules.models.quests.PlayerQuests</class>
        <class>centralworks.spawners.modules.models.quests.QuestData</class>
        <class>centralworks.spawners.modules.models.quests.QuestRule</class>
        <class>centralworks.spawners.modules.models.spawners.SpawnerImpulse</class>
        <class>centralworks.spawners.modules.animations.AnimationAbstract</class>
        <!--<class>centralworks.spawners.test.Testing</class>-->
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="javax.persistence.schema-generation.database.action"
                      value="create" />
            <property name="javax.persistence.provider"
                      value="org.hibernate.jpa.HibernatePersistenceProvider" />
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/twmobcoins?useSSL=false&amp;useTimezone=true&amp;serverTimezone=UTC" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="123" />
            <property name="hibernate.hikari.minimumIdle" value="5" />
            <property name="hibernate.hikari.maximumPoolSize" value="50" />
            <property name="hibernate.hikari.idleTimeout" value="30000" />
            <property name="hibernate.hbm2dll.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.connection.provider_class" value="org.hibernate.hikaricp.internal.HikariCPConnectionProvider" />
        </properties>
    </persistence-unit>
</persistence>